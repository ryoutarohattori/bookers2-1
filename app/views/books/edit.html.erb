<div class='container my-4'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1>Editing Book</h1>

      <%= form_with model: @book, method: :patch do |f| %>
       <h5>Title</h5>
        <%= f.text_field :title, class: "form-control", style: "width:90%", rows: "3" %>

       <h5>Opinion</h5>
       <%= f.text_area :body, class: "form-control", style: "width:90%", rows: "3" %>

       <p><input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book" /></p>
  

       <%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %>
      <% end %>
    </div>
  </div>
</div>