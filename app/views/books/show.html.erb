<div class='container'>
 <div class='row'>
  <%= render 'book',book:@book %>

  <div class='col-md-8 offset-md-1'>
    <h2>Book detail</h2>
    <table class='table table-hover table-inverse'>
     
     <% @books.each do |book| %>
      <tr>
       <td><%= image_tag book.user.get_profile_image(100,100) %><p><%= link_to current_user.name %></p></td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
       <td><a class="btn btn-sm btn-success">edit</a></td>
       <td><a class="btn btn-sm btn-danger ">destroy</a></td>
      </tr>
     <% end %>
    </table>
   </div>
 </div>
</div>