 <div class='col-md-3'>
     <h2>User info</h2>

     <table class="table">
      <tr><%= image_tag current_user.get_profile_image(100,100) %></tr>
       <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
       </tr>
       <tr>
        <th>introduction</th>
        <th></th>
       </tr>
    </table>

    <div class='row'>
      <a class="btn btn-outline-secondary btn-block edit_user_registration" href=" /users/:id/edit">
       <i class="fas fa-user-cog"></i>
      </a>
    </div>

    <h2 class="mt-3">New book</h2>

    <%= form_with model: book, url: users_path do |f| %>

     <h4>Title</h4>
     <%= f.text_field :title %>

     <h4>Opinion</h4>
     <%= f.text_area :body %>

     <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" />


    <% end %>
   </div>