<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/11793efeb1.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
    <div class="row bg-dark text-white list-unstyled" style="height: 50px;">
    <div class="col-lg-8 h4 d-flex align-items-center"><span>Bookers</span></div>
     <li class="col-lg-1 d-flex align-items-center">
      <i class="fa-solid fa-house"></i><%= link_to 'Home',  books_path, class: 'text-light' %>
     </li>
    <% if user_signed_in? %>
     <li class="col-lg-1 d-flex align-items-center">
      <i class="fa-solid fa-users"></i><%= link_to 'Users', users_path, class: 'text-light' %>
     </li>
     <li class="col-lg-1 d-flex align-items-center">
      <i class="fa-solid fa-book-open"></i><%= link_to 'books', books_path, class: 'text-light' %>
     </li>
     <li class="col-lg-1 d-flex align-items-center">
      <i class="fa-solid fa-right-from-bracket"></i><%= link_to 'Log out', destroy_user_session_path, class: 'text-light', method: :delete %>
     </li>
    <% else %>
      <li class="col-lg-1 d-flex align-items-center">
      <i class="fa-solid fa-link"></i><%= link_to 'About', about_path, class: 'text-light' %>
      </li>
      <li class="col-lg-1 d-flex align-items-center">
       <i class="fa-solid fa-user-plus"></i><%= link_to 'Sign up', new_user_registration_path, class: 'text-light' %>
      </li>
      <li class="col-lg-1 d-flex align-items-center">
       <i class="fa-solid fa-right-to-bracket"></i><%= link_to 'Log in', new_user_session_path, class: 'text-light' %>
      </li>
     <% end %>
   </div>
   </header>
    <%= yield %>
  <footer>
   <div class='container mt-5'>
  	 <div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
   </div>
  </footer>
  </body>
</html>
