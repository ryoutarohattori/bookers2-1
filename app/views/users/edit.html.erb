<div class='container my-4'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1>User info</h1>

     <%= form_with model: @user, method: :patch do |f| %>

      <h5>Name</h5>
      <%= f.text_field :name , class: "form-control", style: "width:90%" %>

       <h5>Image</h5>
       <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

       <h5>Introduction</h5>
       <%= f.text_area :body, class: "form-control", style: "width:90%", rows: "2" %>

       <%= f.submit 'Update User', class: "btn btn-secondary" %>

     <% end %>
    </div>
  </div>
</div>